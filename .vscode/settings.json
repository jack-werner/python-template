{
    "editor.formatOnSave": true,
    "[python]": {
        "gitlens.codeLens.symbolScopes": [
            "!Module"
        ],
        "editor.wordBasedSuggestions": "off",
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.rulers": [88]
    },
    "mypy-type-checker.severity": {
        "error": "Error",
        "note": "Information"
    }
}